<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>uk.gov.justice.annotation.test</groupId>
    <artifactId>project-to-test</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <build>
        <plugins>
            <plugin>
                <groupId>uk.gov.justice.maven</groupId>
                <artifactId>annotation-validator-maven-plugin</artifactId>
                <version>1.6.6-SNAPSHOT</version>
                <configuration>
                    <!-- this property takes precedence over everything else-->
                    <validationSkip>true</validationSkip>
                    <generateReport>true</generateReport>
                    <failBuildOnError>true</failBuildOnError>
                    <serviceName>structure</serviceName>
                    <annotations>
                        <annotation>uk.gov.justice.domain.annotation.Event</annotation>
                    </annotations>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>uk.gov.justice.framework-api</groupId>
            <artifactId>framework-api-domain</artifactId>
            <version>2.0.3</version>
        </dependency>
    </dependencies>

</project>
